// Compiles a TypeScript program
{
	"version": "0.1.0",
	"tasks": [
		{
			"taskName": "tsc",
			"command": "tsc",
			"isShellCommand": true,
			"args": [
				"--out",
				"bin/js/game.js"
			],
			"problemMatcher": "$tsc"
		},
		{
			"taskName": "build",
			"command": "uglifyjs",
			"args": [
				"bin/js/game.js",
				"--output",
				"bin/js/game.min.js"
			],
			"isBuildCommand": true,
			"isShellCommand": true
		}
	]
}